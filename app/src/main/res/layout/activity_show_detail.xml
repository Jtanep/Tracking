<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_green_new">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="0.05"
        android:hint="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="เรื่อง :"
            android:layout_weight="1"
            android:hint="1"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtrecieve"
            android:hint="2"
            android:layout_weight="0.35"
            android:text="subject_all" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout13"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="0.05"
        android:hint="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="วันที่ส่ง :"
            android:layout_weight="1"
            android:hint="1"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:hint="2"
            android:layout_weight="0.35"
            android:text="subject_all" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout14"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="0.05"
        android:hint="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="วันที่อนุมัติ :"
            android:layout_weight="1"
            android:hint="1"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:hint="2"
            android:layout_weight="0.35"
            android:text="subject_all" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout12"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:layout_below = "@+id/linear1"
        android:layout_weight="14"
        android:hint="2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="ข้อความ :"
            android:layout_weight="2.8"
            android:hint="1"
            android:gravity="top|center_vertical"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textAlignment="gravity" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="New Text"
            android:id="@+id/textView2"
            android:layout_weight="0.25"
            android:layout_margin="3dp"
            android:singleLine="false"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear3"
        android:layout_weight="0.02"
        android:hint="3"
        android:layout_below="@+id/linearLayout12"
        android:background="@android:color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:background="@color/bg_tab"
            android:id="@+id/staapprove">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageButton4"
                android:src="@drawable/ic_thumbs_up_down_white_24dp"
                android:layout_weight="1"
                android:hint="1"
                android:text="@string/accept" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ผลการอนุมัติ"
                android:id="@+id/textView5"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:background="@color/bg_tab"
            android:id="@+id/stagps">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageButton5"
                android:src="@drawable/ic_my_location_white_24dp"
                android:layout_weight="1"
                android:hint="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="แจ้งตำแหน่ง"
                android:id="@+id/textView6"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_tab"
            android:id="@+id/staback">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageButton6"
                android:src="@drawable/ic_home_white_24dp"
                android:layout_weight="1"
                android:hint="3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="กลับเมนูหลัก"
                android:id="@+id/textView7"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>