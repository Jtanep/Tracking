<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_green_new"
    android:backgroundTint="@color/abc_search_url_text_normal"
    android:backgroundTintMode="src_in"
    android:foreground="@color/abc_search_url_text"
    tools:context="com.zerother.zero.tracking.DetailallActivity"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1">

        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calendarView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView17"
            android:layout_weight="7"
            android:background="@android:color/white" />

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView4"
            android:layout_column="18"
            android:background="@android:color/white"
            android:layout_weight="1" />

    </LinearLayout>


</LinearLayout>